<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/accent_material_light">


    <TextView
        android:layout_width="275dp"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtNumero"
        android:phoneNumber="false"
        android:textColor="@android:color/background_light"
        android:background="#000000"
        android:gravity="right|fill_vertical"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignRight="@+id/btnMas"
        android:textIsSelectable="false"
        android:layout_marginBottom="-5dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/txtNumero"
        android:layout_alignParentLeft="true"
        android:onClick="onClickBtn7"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_above="@+id/btn4"
        android:layout_toRightOf="@+id/btn7"
        android:onClick="onClickBtn8"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/btn9"
        android:layout_alignTop="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:onClick="onClickBtn9"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@+id/btn7"
        android:onClick="onClickBtn4"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_alignTop="@+id/btn4"
        android:layout_toLeftOf="@+id/btn9"
        android:onClick="onClickBtn5"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignLeft="@+id/btn9"
        android:onClick="onClickBtn6"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:onClick="onClickBtn1"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/btn1"
        android:layout_toLeftOf="@+id/btn9"
        android:onClick="onClickBtn2"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignLeft="@+id/btn6"
        android:onClick="onClickBtn3"
        android:textStyle="bold"
        android:textSize="35dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignRight="@+id/btn2"
        android:onClick="onClickBtn0"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/btnMas"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_alignParentRight="true"
        android:onClick="onClickSuma"
        android:textSize="39dp"
        android:layout_above="@+id/btn6"
        android:background="#563cec"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/btnMenos"
        android:onClick="onClickResta"
        android:textSize="37dp"
        android:layout_below="@+id/btnMas"
        android:layout_alignRight="@+id/btnMas"
        android:layout_alignEnd="@+id/btnMas"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:background="#563cec"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/btnIgual"
        android:onClick="onClickIgual"
        android:textSize="35dp"
        android:textStyle="bold"
        android:background="#563cec"
        android:layout_below="@+id/btnDivision"
        android:layout_alignRight="@+id/txtNumero"
        android:layout_alignEnd="@+id/txtNumero"
        android:layout_alignLeft="@+id/btnDivision"
        android:layout_alignStart="@+id/btnDivision"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="BORRAR"
        android:id="@+id/btnBorrar"
        android:onClick="onClickLimpia"
        android:backgroundTint="@android:color/tab_indicator_text"
        android:foreground="@color/highlighted_text_material_dark"
        android:textStyle="bold"
        android:layout_below="@+id/btn0"
        android:layout_alignLeft="@+id/btn0"
        android:layout_alignStart="@+id/btn0"
        android:layout_alignRight="@+id/btnPunto"
        android:layout_alignEnd="@+id/btnPunto"
        android:layout_alignBottom="@+id/btnIgual" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="."
        android:id="@+id/btnPunto"
        android:onClick="onClickBtnPunto"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="x"
        android:id="@+id/btnMultiplicacion"
        android:onClick="onClickMultiplicacion"
        android:textSize="39dp"
        android:layout_below="@+id/btnMenos"
        android:layout_alignRight="@+id/btnMenos"
        android:layout_alignEnd="@+id/btnMenos"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:background="#563cec"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:id="@+id/btnDivision"
        android:onClick="onClickDivision"
        android:textSize="39dp"
        android:layout_below="@+id/btnMultiplicacion"
        android:layout_toRightOf="@+id/btn6"
        android:layout_alignRight="@+id/btnMultiplicacion"
        android:elegantTextHeight="false"
        android:contextClickable="false"
        android:background="#563cec"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nombreDesarrollador"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nombre"
        android:id="@+id/textView2"
        android:gravity="right"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnIgual"
        android:layout_alignEnd="@+id/btnIgual" />

</RelativeLayout>
