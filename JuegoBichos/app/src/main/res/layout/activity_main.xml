<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"



    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="add"
        android:background="@drawable/muro"
        android:id="@+id/muroPuntos">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos:"
            android:id="@+id/TextView"
            android:textColor="#fff600"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/puntos"
            android:textColor="#e6ff00"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIvos:"
            android:id="@+id/textView2"
            android:textColor="#fff600"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/vivos"
            android:textColor="#e6ff00"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cesped"
        android:id="@+id/panelJuego">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/jugar"
            android:background="@drawable/jugar"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/salir"
            android:background="@drawable/exitgame"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="54dp"
            android:layout_alignTop="@+id/jugar"
            android:layout_toRightOf="@+id/jugar"
            android:layout_toEndOf="@+id/jugar" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/instrucciones"
            android:background="@drawable/instrucciones"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="40dp" />
    </RelativeLayout>
</LinearLayout>
